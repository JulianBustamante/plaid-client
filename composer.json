{
    "name": "julianbustamante/plaid-client",
    "type": "library",
    "description": "PHP API Client for Plaid.com",
    "keywords": [
        "api", "plaid", "julianbustamante", "plaid-client"
    ],
    "homepage": "https://github.com/julianbustamante/plaid-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Julian Bustamante",
            "email": "julian.bustamante@pixelula.com",
            "homepage": "https://github.com/julianbustamante",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "JulianBustamante\\Plaid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JulianBustamante\\Plaid\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
